<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/gamecoin"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="21dp"
                tools:layout_editor_absoluteY="48dp"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_conversion_absoluteWidth="161dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:letterSpacing="0.13"
                android:text="@string/skip"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="16dp"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="206dp"
                tools:layout_conversion_absoluteWidth="161dp" />
        </LinearLayout>


    <ImageView
        android:layout_width="373dp"
        android:layout_height="266dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/promo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="400dp"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:letterSpacing="-0.01"
        android:text="Let the World Know"
        android:textColor="@color/logregbg"
        android:textSize="56sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="550dp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4sp"
        android:text="Showcase Your Complex Facilities and promote among the interested audience!"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        android:textStyle="bold" />


        <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="600dp"
                android:layout_marginStart="240dp"
                android:layout_marginBottom="50dp"
                android:onClick="intentregtype"
                android:src="@drawable/ic_baseline_play_circle_filled_24" />



</FrameLayout>