<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shrutislegion.sportify">

    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sportify">
        <activity
            android:name=".playeractivities.PlayerBookDateActivity"
            android:exported="true" />
        <activity
            android:name=".linked"
            android:exported="false">
            <intent-filter android:autoVerify="true">
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="www.sportify.com"
                    android:scheme="http" />
                <data
                    android:host="www.sportify.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".playeractivities.PlayerRatingActivity"
            android:exported="true" />
        <activity
            android:name=".playeractivities.PlayerSharedActivity"
            android:exported="true"
            android:noHistory="true" />
        <activity
            android:name=".playeractivities.PlayerHomeActivity"
            android:exported="true"
            android:noHistory="true" />
        <activity
            android:name=".lenderactivities.LenderSharedActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".lenderactivities.LanderLogActivity"
            android:label="Register Your Complex"
            android:noHistory="true" />
        <activity
            android:name=".lenderactivities.LenderHomeActivity"
            android:noHistory="true" />
        <activity
            android:name=".lenderactivities.AddComplexActivity"
            android:label="Add Your Complex"
            android:noHistory="true" />
        <activity
            android:name=".RegistrationActivity"
            android:label="Welcome to Sportify"
            android:noHistory="true" />
        <activity
            android:name=".playeractivities.PlayerLogActivity"
            android:label="Sign In"
            android:noHistory="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data   android:scheme="http" />
                <data   android:scheme="https" />
                <data android:host=".shrutislegion.page.link" />
            </intent-filter>
        </activity>
    </application>

</manifest>